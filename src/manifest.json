{
  "manifest_version": 3,
  "name": "Ragebait Meter",
  "version": "0.2.1",
  "description": "Detects ragebait tactics using local heuristics + emotion scoring (no WASM/ML).",
  "permissions": ["storage", "activeTab", "scripting", "unlimitedStorage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Ragebait Meter",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "storage.js", "lexicons.js", "content.js"],
      "css": ["ui.css"],
      "run_at": "document_idle"
    }
  ]
}
